<p id="notice"><%= notice %></p>

<%= link_to 'Import', root_path, class: "btn btn-outline-primary" %>

<h1 class="text-primary text-center">Listing Files</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Filename</th>
      <th>State</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @imported_files.each do |imported_file| %>
      <tr>
        <td><%= imported_file.filename %></td>
        <td><%= imported_file.state %></td>
        <td><%= button_to 'Destroy', imported_file, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @contacts %>
